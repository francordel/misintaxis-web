<style>
  .signup__form {
    margin: 2rem 0;
    width: 100%;
    display: flex;
    max-width: 600px;
    flex-direction: row; /* Por defecto en escritorio */
  }

  input[type="text"] {
    width: 100%;
    padding: 0.5rem 1rem;
    border: 2px solid #ccc;
    color: #000000;
    border-radius: 2rem;
    outline-style: none;
  }

  input:focus {
    border: 2px solid #000;
  }

  .signup__form :global(.btn) {
    margin-left: 1rem;
  }

  /* Estilos para pantallas pequeÃ±as */
  @media (max-width: 600px) {
    .signup__form {
      flex-direction: column; /* Apila los elementos en mÃ³viles */
      align-items: center;
    }

    input[type="text"] {
      margin-bottom: 1rem; /* Espacio entre el input y el botÃ³n */
